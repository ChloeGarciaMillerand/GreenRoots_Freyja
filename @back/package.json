{
  "name": "@back",
  "version": "1.0.0",
  "type": "module",
  "description": "GreenRoots E-shop Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:connection": "NODE_OPTIONS='--experimental-vm-modules' jest tests/connection.test.js",
    "test:database": "NODE_OPTIONS='--experimental-vm-modules' jest tests/database.test.js",
    "test:security": "NODE_OPTIONS='--experimental-vm-modules' jest tests/security.test.js",
    "test:validation": "NODE_OPTIONS='--experimental-vm-modules' jest tests/validation.test.js",
    "test:errorHandler": "NODE_OPTIONS='--experimental-vm-modules' jest tests/errorHandler.test.js",
    "test:treeController": "NODE_OPTIONS='--experimental-vm-modules' jest tests/treeController.test.js",
    "test:projectController": "NODE_OPTIONS='--experimental-vm-modules' jest tests/projectController.test.js",
    "test:localizationController": "NODE_OPTIONS='--experimental-vm-modules' jest tests/localizationController.test.js",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:e2e": "playwright test",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --apply .",
    "db:create": "node database/migration/migrate.js",
    "db:seed": "node database/seeders/seed.js",
    "db:reset": "pnpm db:create && pnpm db:seed"
  },
  "keywords": [
    "ecommerce",
    "api",
    "express",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "argon2": "^0.44.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "4.18.2",
    "express-rate-limit": "6.10.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "path-to-regexp": "6.2.1",
    "pg": "^8.16.3",
    "ts-node": "^10.9.2",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@playwright/test": "^1.54.2",
    "@types/cors": "^2.8.19",
    "@types/express": "4.17.17",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "@types/pg": "^8.15.5",
    "biome": "^0.3.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "pnpm": {
    "overrides": {
      "path-to-regexp": "0.1.7"
    }
  },
  "jest": {
    "transform": {},
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}