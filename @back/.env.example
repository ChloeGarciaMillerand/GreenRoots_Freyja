# .env - Environment Variables

# Application
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database configuration
POSTGRES_DB=greenroots
POSTGRES_USER=admin
POSTGRES_PASSWORD=password

# Application configuration
DATABASE_URL=postgres://admin:password@database:5432/greenroots

# For tests running from host machine (outside Docker)
DB_USER=admin
DB_HOST=database
DB_NAME=greenroots
DB_PASSWORD=password
DB_PORT=5432

# JWT Configuration
JWT_SECRET=my-super-secret-jwt-key-at-least-32-characters-long-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_ISSUER=greenroots-app

# Argon2 Configuration
ARGON2_MEMORY_COST=65536
ARGON2_TIME_COST=3
ARGON2_PARALLELISM=1

# Password Requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_BLOCK_DURATION=1800000

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001